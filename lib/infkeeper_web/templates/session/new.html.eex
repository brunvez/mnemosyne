<h1><%= gettext "Log in" %></h1>

<%= form_for @conn, Routes.session_path(@conn, :create), [as: :login], fn f -> %>
  <%= label f, :email %>
  <%= text_input f, :email %>

  <%= label f, :password %>
  <%= password_input f, :password %>

  <div class="actions">
    <%= submit gettext("Submit"), class: "button button--black" %>
    <span>
      <%= gettext "Don't have an account?" %>
      <%= link gettext("Sign up"), to: Routes.sign_up_path(@conn, :new) %>  
    </span>
  </div>
<% end %>
